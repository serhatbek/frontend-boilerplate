{% extends "includes/layout/layout.njk" %}

{# You can also use set for handling data #}
{% set colors = [
{
text: 'I love green color too much.',
class: 'green'
}
] %}

{% block content %}
    <h1>Hello World! Miyawww!
    </h1>

    {% for item in colors %}
        <i class="icon-hamburger"></i>
        <i class="icon-balloon"></i>
        <i class="icon-leaf"></i>
        <i class="icon-home"></i>
        <p class="{{ item.class }}">{{ item.text }}</p>
    {% endfor %}

    {% for item in pets %}
        <p class="{{ item.class }}">{{ item.text }}</p>
    {% endfor %}

    {% for item in fruits %}
        <button class="{{ item.class }}">{{ item.text }}</button>
    {% endfor %}

{% endblock %}